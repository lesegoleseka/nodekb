extends layout

block content
  h1 #{title}
  form(method='POST', action='/articles/edit/'+article._id)
    #form-group
      label Title:
      input.form-contol(name='title', type='text', value=article.title)
    #form-group
      label Author:
      input.form-contol(name='author', type='text', value=article.author)
    #form-group
      label Body:
      textarea.form-contol(name='body')= article.body
    br  
    input.btn.btn-primary(type='submit',value='Submit')
